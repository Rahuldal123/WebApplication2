
@{
    ViewData["Title"] = "PersonalDetails";
}

<h1>PersonalDetails</h1>

@using(Html.BeginForm()){
    <p>
        <label>Enter your Name</label>
        @Html.TextBox("fname")
    </p>
    <p>
        <lebel>Select Gender</lebel>
        @Html.RadioButton("gender","Male")Male
        @Html.RadioButton("gender","Female")Female
    </p>
    <p>
        <lebel>Select Hobbies</lebel>
        <input type="checkbox" name="hobbies"value="Sports" />Sports
        <input type="checkbox" name="hobbies"value="Music" />Music
        <input type="checkbox" name="hobbies"value="Study" />Study
    </p>
    <p>
        <lebel>Do you want to Participate in survey ?</lebel>
        @Html.DropDownList("option")
    </p>
    <p>
        <input type="Submit" value="Save" class="btn btn-primary"/>
    </p>
}